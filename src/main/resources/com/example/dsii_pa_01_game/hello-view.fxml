<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.dsii_pa_01_game.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- HBox for color pane and points -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Pane fx:id="colorPane" prefHeight="30" prefWidth="620" />
        <Label fx:id="pointsTitleLabel"/>
        <Label fx:id="pointsLabel"/>
    </HBox>

    <Button fx:id="startButton" text="Start Game" onAction="#onStartButtonClick"/>

    <!-- button container -->
    <Pane fx:id="buttonPane" prefHeight="400" prefWidth="620" style="-fx-border-color: lightgray;" />
</VBox>

