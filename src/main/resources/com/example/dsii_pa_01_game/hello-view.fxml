<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dsii_pa_01_game.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- HBox for color pane and points -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Pane fx:id="colorPane" prefHeight="30" prefWidth="400.0" style="-fx-background-color: lightgray;">
         <opaqueInsets>
            <Insets right="10.0" />
         </opaqueInsets></Pane>
        <Label fx:id="pointsTitleLabel" prefHeight="30.0" prefWidth="50.0" text="Points:">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin></Label>
        <Label fx:id="pointsLabel" prefHeight="30.0" prefWidth="100.0" text="0" />
    </HBox>

    <Button fx:id="startButton" onAction="#onStartButtonClick" text="Start Game" />
    <Label fx:id="progressLabel" prefHeight="30.0" prefWidth="200.0" />

    <!-- button container -->
    <GridPane fx:id="buttonGridPane" prefHeight="400" prefWidth="620" style="-fx-border-color: lightgray;">
        <columnConstraints>
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
        </rowConstraints>
    </GridPane>
</VBox>
